<%- include("partials/header")%>


<div class="container">
	<div class ="jumbotron">
	<div class="container">
		<h1>Welcome to Campgrounds</h1>
		<p>View our handpicked campgrounds from all over the world</p>
		<p><a href="/campgrounds/new" class= "btn btn-primary btn-lg">Add New Campground</a></p>
	</div>
	</div>
	<div class="rows text-center" style="display:flex;flex-wrap:wrap;">
		<%camps.forEach(function(camp){%>
			<div class="col-md-4 col-sm-6">
				<div class="thumbnail" >
					<img src="<%= camp.image%>">
					<div class="caption">
						<h4><%= camp.name%></h4>
					</div>
					<p>
					<a href="/campgrounds/<%=camp._id%>" class="btn btn-primary">Show More</a>
					</p>
				</div>
				
			</div>
		<%});%>
	</div>
	
</div>





<%- include("partials/footer")%>