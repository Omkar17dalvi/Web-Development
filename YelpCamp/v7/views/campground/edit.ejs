<%- include("../partials/header")%>
<div class="container">
	<h1 style="text-align:center; text-transform: capitalize">Create new campground</h1>
	<div style="width:30% ;margin:25px auto;">
		<form action="/campgrounds/<%= camp._id%>?_method=PUT" method="post">
			<div class="form-group">
				<input type="text" class="form-control" name="camp[name]" value="<%= camp.name%>">
			</div>
			<div class="form-group">
				<input type="text" class="form-control" name="camp[image]" value="<%= camp.image%>">
			</div>
			<div class="form-group">
				<input type="text" class="form-control" name="camp[description]" value="<%= camp.description%>">
			</div>
			<div class="form-group">
				<input type="submit" class="btn btn-lg btn-primary btn-block">
			</div>
			
		</form>
		<a href="/campgrounds">Go Back!</a>
	</div>
	
</div>

<%- include("../partials/footer")%>
